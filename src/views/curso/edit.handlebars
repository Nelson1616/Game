<div class="container">
    <h1>Atualizar Curso</h1>

    <form action="/curso/update" method="POST">

        <input type="hidden" name="id" value="{{curso.id}}">

        <label for="sigla">Sigla</label>
        <br>
        <input type="text" name="sigla" value="{{curso.sigla}}">
        <br>

        <label for="nome">Nome</label>
        <br>
        <input type="text" name="nome" value="{{curso.nome}}">
        <br>

        <label for="descricao">Descricao do curso</label>
        <br>
        <textarea name="descricao" id="" cols="30" rows="10">{{curso.descricao}}</textarea>
        <br>

        <h2>Area do Conhecimento</h2>
        <select name="areaId" id="">
            {{#each areas}}
            <option value="{{id}}">{{nome}}</option>
            {{/each}}
        </select>

        <br>
        <br>

        <button type="submit">Editar</button>

    </form>

</div>